<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>
    
    <!-- Material for black color -->
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    
    <!-- Material for blue color -->
    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>
    
    <!-- Material for white color -->
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    
    <!-- Material for orange color -->
    <material name="orange">
        <color rgba="1 0.5 0 1"/>
    </material>

    <!-- Base link -->
    <link name="base_link"/>

    <!-- Joint for chassis -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <!-- Chassis link -->
    <link name="chassis">
        <visual>
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>

        <!-- Inertial properties for the chassis -->
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    
    <!-- Joint for left wheel -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.175 0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Left wheel link -->
    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>

        <!-- Inertial properties for the left wheel -->
        <xacro:inertial_cylinder mass="0.1" radius="0.05" length="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Joint for right wheel -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.175 0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Right wheel link -->
    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>

        <!-- Inertial properties for the right wheel -->
        <xacro:inertial_cylinder mass="0.1" radius="0.05" length="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    
    <!-- Joint for caster wheel -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.24 0 0"/>
    </joint>

    <!-- Caster wheel link -->
    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>

        <!-- Inertial properties for the caster wheel -->
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

</robot>
